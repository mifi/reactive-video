{
  "extends": ["@tsconfig/strictest"],
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "composite": true,
    "allowJs": false,
    "checkJs": false,

    // taken from @tsconfig/vite-react
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "jsx": "react-jsx",
  }
}
